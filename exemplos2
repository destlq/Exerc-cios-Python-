#Exemplo 5 - FVL
verdura = "Brócolis"
fruta = "Morango"
legume = "Chuchu"
print ("Aqui estão os nomes de uma fruta, uma verdura e um legume:")
print(fruta,"|",verdura,"|",legume)


#Exemplo 6 - FVL Preço
verdura = "Brócolis"
fruta = "Morango"
legume = "Chuchu"
moeda = "R$"
precov = 3
precof = 4
precol = 5
print ("Aqui estão os nomes de uma fruta, uma verdura e um legume:")
print(fruta, moeda, precof, "|",verdura,moeda, precov,"|",legume, moeda, precol)


#Exemplo 7 - Troca de números
n1 = int(input("Digite o primeiro número: "))
n2 = int(input("Digite o segundo número: "))
print("Antes da troca: n1 = ", n1, "e n2 = ", n2) 
temp = n1
n1 = n2
n2 = temp 
print("Depois da troca: n1= ", n1, "e n2 = ", n2)


#Exemplo 8 - Type string e float
entrada1 = type(input("Digite um texto: "))
entrada2 = type(float(input("Digite um número: ")))
print("A primeira entrada é uma ", entrada1)
print("A segunda entrada é uma ", entrada2)


#Exemplo 9 - Preço carro
kmPercorrido = float(input("Quantos kilômetros o carro alugado percorreu? "))
diasA = int(input("Quantos dias o carro está alugado? "))
preco = (diasA * 60) + (0.15 * kmPercorrido)
print("O preço total a pagar é: ", preco)


#Exemplo 10 - Salário
salario = float(input("Digite o seu salário: "))
percentual = float(input("Digite o percentual de aumento (Escreva sem o %): "))

calculo = (percentual/1000) + salario
print(f"O seu novo salário é de: R$ {calculo:.2f}")


#Exemplo 11 - Loja de Tintas
# Tamanho da área a ser pintada
areaT = float(input("Insira a área total (em m²) da área que você quer pintar: "))

# Preço da tinta por litro
valorTinta = 80 
volumeLata = 18 

# Calculo de quantos litros irá precisar 
litrosNecessarios = areaT/3

# Calculo de quantas latas
latasNecessarias = int(litrosNecessarios / volumeLata) + (1 if litrosNecessarios % volumeLata != 0 else 0)

# Preço total
precoTotal = latasNecessarias * valorTinta

# Informando ao usuário
print(f"Você deverá comprar aproximadamente {latasNecessarias:.2f} latas de tinta")
print(f"Preço total: R$ {precoTotal:.2f}")
